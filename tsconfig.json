{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@shared-components/*": ["./shared/components/*"],
      "@shared-constants": ["./shared/constants"],
      "@api": ["./services/api/index"],
      "@theme/*": ["./shared/theme/*"],
      "@localization": ["./shared/localization"],
      "@services/*": ["./services/*"],
      "@pages/*": ["./pages/*"],
      "@shared": ["./shared/"],
      "@shared/*": ["./shared/*"],
      "@assets": ["./assets/"],
      "@assets/*": ["./assets/*"],
      "@icons": ["./assets/icons/"],
      "@icons/*": ["./assets/icons/*"],
      "@hooks": ["./shared/hooks/"],
      "@hooks/*": ["./shared/hooks/*"],
      "@test-utils": ["../test-utils.tsx"],
      "@context": ["./shared/context/"],
      "@context/*": ["./shared/context/*"],
      "@utils": ["./shared/utils/"],
      "@utils/*": ["./shared/utils/*"],
      "@localization/*": ["./shared/localization/*"],
      "@envs": ["../envs.ts"],
      "@routes/*": ["./routes/*"],
      "@routes/": ["./routes/"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}